<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.duzhaokun123.bilibilihd2.model.HomeCardModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        tools:targetApi="m">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:actualImageScaleType="centerCrop"
            app:imageUrl="@{model.coverUrl}"
            app:layout_constraintDimensionRatio="8:5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@color/image_background"
            app:roundedCornerRadius="6dp"
            app:viewAspectRatio="1.6" />

        <!--        <com.duzhaokun123.bilibilihd2.ui.widget.GlideLoadRationHeightImageView-->
        <!--            android:id="@+id/iv"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            app:imageUrl="@{model.coverUrl}"-->
        <!--            app:layout_constraintDimensionRatio="8:5"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            tools:src="@tools:sample/avatars" />-->

        <!--        <com.duzhaokun123.bilibilihd2.ui.widget.GlideLoadRationHeightImageView-->
        <!--            android:id="@+id/iv"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:maxHeight="400dp"-->
        <!--            android:minHeight="100dp"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            app:imageUrl="@{model.coverUrl}"-->
        <!--            app:layout_constraintDimensionRatio="8:5"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:ration="0.625"-->
        <!--            tools:src="@tools:sample/avatars" />-->

        <LinearLayout
            android:id="@+id/coverLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_transparent_background"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_coverLeftText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_text"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"
                android:text="@{model.coverLeftText1}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="@{model.coverLeftText1 == null ? android.view.View.GONE : android.view.View.VISIBLE}"
                tools:text="tv_coverLeftText1" />

            <TextView
                android:id="@+id/tv_coverLeftText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{model.coverLeftText2}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="tv_coverLeftText2" />

            <!--            android:drawablePadding="2dp"-->
            <!--            android:gravity="center_vertical"-->
            <!--            app:drawableStartCompat="@drawable/ic_play"-->
            <!--            app:drawableTint="@color/white"-->
            <TextView
                android:id="@+id/tv_coverLeftText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.coverLeftText3}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="tv_coverLeftText3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttomLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv">

            <!--            <com.duzhaokun123.bilibilihd2.ui.widget.GlideLoadRoundImageView-->
            <!--                android:id="@+id/civ_face"-->
            <!--                android:layout_width="34dp"-->
            <!--                android:layout_height="34dp"-->
            <!--                android:scaleType="fitCenter"-->
            <!--                android:visibility="@{model.faceUrl == null ? android.view.View.GONE : android.view.View.VISIBLE}"-->
            <!--                app:imageUrl="@{model.faceUrl}"-->
            <!--                tools:src="@tools:sample/avatars" />-->

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/civ_face"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="6dp"
                android:scaleType="fitCenter"
                android:visibility="@{model.faceUrl == null ? android.view.View.GONE : android.view.View.VISIBLE}"
                app:actualImageScaleType="centerCrop"
                app:imageUrl="@{model.faceUrl}"
                app:placeholderImage="@color/image_background"
                app:roundAsCircle="true" />

            <LinearLayout
                android:id="@+id/titleLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="-3sp"
                    android:lineSpacingMultiplier="1.0"
                    android:maxLines="2"
                    android:text="@{model.title}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    tools:text="TITLE\nTITLE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/bg_badge"
                        android:paddingHorizontal="2dp"
                        android:text="@{model.badge}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="?attr/colorSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:visibility="@{model.badge != null ? android.view.View.VISIBLE : android.view.View.GONE}"
                        tools:text="BADGE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/bg_badge"
                        android:paddingHorizontal="2dp"
                        android:text="@string/ad"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="?attr/colorSurface"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:visibility="@{model.isAd ? android.view.View.VISIBLE : android.view.View.GONE}" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondaryTextColor"
                        android:text="@{model.desc}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="13sp"
                        tools:text="DESC" />
<!--                        android:alpha="0.7"-->
<!--                        android:textColor="?android:attr/textColorTertiary"-->
                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:src="@drawable/ic_three_points" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>